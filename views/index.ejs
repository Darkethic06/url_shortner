<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <h1 class="text-center mt-3">Hello, world!</h1>

  <div class="d-flex justify-content-center align-items-center my-5">

  <div class="col-6">

    <div class="card" >
      <div class="card-body">
        <form action="/shortUrls" method="post">
          <div class="input-group mb-3">
            <input type="url" name="fullUrl" class="form-control" id="fullUrl" placeholder="URL">
            <button class="btn btn-secondary" type="submit">Shrink</button>
            </div>
          </form>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <table class="table table-dark">
    <thead>
      <tr>
        <th>URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(item => { %>
        <tr>
          <th> <a href="<%= item.full %>"><%= item.full %></a> </th>
          <td><a href="<%= item.short %>"><%= item.short %></a></td>
          <td><%= item.totalClicks %></td>
        </tr>
        <%  }); %>
      
    </tbody>
  </table>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>